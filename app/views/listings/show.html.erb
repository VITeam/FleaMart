<br/><br/><br/><br/>
<div class="row">
  <div class="col-md-6"><%= image_tag @listing.image_url(:medium) %></div>
  <div class="col-md-6">

  <div class="text"><h3><%= @listing.name %></h3></div>
  <h5> <%=  number_to_currency(@listing.price) %> </h5>
  
  <br>
    <div class="center">
      <%= link_to t('buy it now'), new_listing_order_path(@listing), class: "btn btn-success" %>
      <br/>
      <%= link_to "Start conversation", new_message_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
</div>
<br />
<p> <%= @listing.description %> </p>
<% @listing_attachments.each do |p| %>
  <%= image_tag p.photo_url %>
  <br />
  <% if current_user == @listing.user %>
  <%= link_to t('edit attachment'), edit_listing_attachment_path(p) %><br />
  <% end %>
<% end %>

<% if current_user == @listing.user %>
<%= link_to t('edit'), edit_listing_path(@listing), class:"btn btn-link" %> |
<% end %>
<%= link_to t('back'), listings_path, class:"btn btn-link" %>
