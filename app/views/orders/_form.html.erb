<%= form_for([@listing, @order]) do |form| %>
  <% if order.errors.any? %>
     <div id="error_explanation">
        <div id="error_explanation" class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4><%= pluralize(order.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, id: :order_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, id: :order_city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :region %>
    <%= form.text_field :region, id: :order_region, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Complete order", class: "btn btn-success" %>
  </div>
<% end %>
